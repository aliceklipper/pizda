#!/usr/bin/env bash

# Runs WDS

export NODE_ENV='development'
export PORT=1337
export PUBLIC_PATH=''
export HOST='localhost'

export NODE_OPTIONS="--no-deprecation"

webpack-dashboard \
    --port "$[PORT + 1]" \
    --title "RocketBroom » WDS « ${NODE_ENV}" \
    -- \
    node \
    --harmony \
    `which webpack-dev-server`
